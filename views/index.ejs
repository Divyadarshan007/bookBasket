<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Basket Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="/assets/images/books-stack-of-three-svgrepo-com.svg">
    <link rel="stylesheet" href="/assets/css/style.css">

</head>

<body>
    <nav class="navbar navbar-expand-lg mb-5">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-layer-group me-2"></i> Book Basket Admin
            </a>
        </div>
    </nav>

    <div class="container">
        <div class="row g-5">
            <div class="col-lg-4">
                <div class="tech-card sticky-sidebar">
                    <div class="card-header-tech">
                        <h5><i class="fas <%= thatOneData?'fa-pen':'fa-plus-circle'%> me-2"></i>
                            <%= thatOneData?'update Book':'Add New Book'%>
                        </h5>
                    </div>
                    <div class="p-4">
                        <form action="/<%= thatOneData ? `edit-book/${thatOneData.id}`: 'add-book' %>" method="post">
                            <div class="mb-3">
                                <label class="form-label">Book Name</label>
                                <input type="text" name="name" class="form-control" value="<%= thatOneData?.name %>"
                                    placeholder="e.g. The Matrix Design">

                            </div>

                            <div class="mb-3">
                                <label class="form-label">Author</label>
                                <input type="text" name="author" class="form-control" value="<%= thatOneData?.author %>"
                                    placeholder="e.g. John Doe">

                            </div>

                            <div class="row">
                                <div class="col-6 mb-3">
                                    <label class="form-label">Price (₹)</label>
                                    <input type="number" name="price" class="form-control"
                                        value="<%= thatOneData?.price %>" placeholder="0.00">
                                </div>
                                <div class="col-6 mb-3">
                                    <label class="form-label">Genre</label>
                                    <select class="form-select" name="genre">
                                        <option value="">Select...</option>
                                        <option <%=thatOneData?.genre=='Fiction' ?'selected':'' %>
                                            value="Fiction">Fiction</option>
                                        <option <%=thatOneData?.genre=='Non Fiction' ?'selected':'' %> value="Non
                                            Fiction">Non Fiction</option>
                                        <option <%=thatOneData?.genre=='Mystery' ?'selected':'' %>
                                            value="Mystery">Mystery</option>
                                        <option <%=thatOneData?.genre=='Romance' ?'selected':'' %>
                                            value="Romance">Romance</option>
                                        <option <%=thatOneData?.genre=='Science' ?'selected':'' %>
                                            value="Science">Science</option>
                                        <option <%=thatOneData?.genre=='Fantasy' ?'selected':'' %>
                                            value="Fantasy">Fantasy</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Publish Date</label>
                                <input type="date" class="form-control" value="<%= thatOneData?.date %>" name="date">
                            </div>

                            <div class="mb-3 p-3" style="border: 1px dashed rgba(255,255,255,0.2); border-radius: 0;">
                                <label class="form-label d-block text-center mb-2">Book Format</label>
                                <div class="d-flex justify-content-between">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="format"
                                            <%=thatOneData?.format=='Hardcover' ?'checked':'' %> value="Hardcover"
                                        id="Hardcover" checked>
                                        <label class="form-check-label small" for="Hardcover">Hardcover</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="format"
                                            <%=thatOneData?.format=='Paperback' ?'checked':'' %> value="Paperback"
                                        id="Paperback">
                                        <label class="form-check-label small" for="Paperback">Paperback</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="format"
                                            <%=thatOneData?.format=='eBook' ?'checked':'' %> value="eBook" id="eBook">
                                        <label class="form-check-label small" for="eBook">eBook</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-check mb-4">
                                <input class="form-check-input" name="isBestSeller" type="checkbox" id="bestseller"
                                    <%=thatOneData?.isBestSeller=='yes' ?'checked':'' %> value="yes">
                                <label class="form-check-label text-light" for="bestseller">
                                    Is Bestseller? <span style="color:var(--neon-pink);"><i
                                            class="fas fa-star ms-1"></i></span>
                                </label>
                            </div>

                            <button class="btn-neon">
                                <i class="fas <%= thatOneData?'fa-pen':'fa-plus'%>  me-2"></i>
                                <%= thatOneData?'update':'Add Book'%>
                            </button>
                            <div class="text-center <%= thatOneData?'d-block':'d-none'%> mt-2">
                                <a href="/" class="text-decoration-none border-bottom text-white">Cancel edit</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="tech-card h-100">
                    <div class="card-header-tech d-flex justify-content-between align-items-center">
                        <h5><i class="fas fa-list me-2"></i>Library Inventory</h5>
                        <div style="font-size: 0.9rem; color: #ccc;">
                            Total Books: <span style="color: #00f3ff; font-weight: bold;">
                                <%= bookData.length %>
                            </span>
                        </div>
                    </div>

                    <div class="table-responsive table-scroll">
                        <table class="table text-nowrap ">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Book Info</th>
                                    <th>Genre</th>
                                    <th>Format</th>
                                    <th>Price</th>
                                    <th>Date</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="">
                                <% if (bookData.length===0) { %>
                                    <tr>
                                        <td colspan="7" class="text-center py-5" style="color: rgba(255,255,255,0.3);">
                                            <i class="fas fa-folder-open fa-3x mb-3 d-block"></i>
                                            No books found in the library.
                                        </td>
                                    </tr>
                                    <% } %>

                                        <% bookData.map((book, idx)=>{ %>
                                            <tr>
                                                <td style="color: #888; font-weight: 500;">
                                                    <%= String(idx + 1).padStart(2, '0' ) %>
                                                </td>
                                                <td>
                                                    <div class="fw-bold text-white fs-5">
                                                        <%= book.name %>
                                                    </div>
                                                    <div class="small" style="color: var(--neon-cyan); opacity: 0.8;">
                                                        <%= book.author %>
                                                    </div>
                                                    <% if (book.isBestSeller=='yes' ) { %>
                                                        <div class="mt-2"><span
                                                                class="badge-bestseller">Bestseller</span></div>
                                                        <% } %>
                                                </td>
                                                <td><span
                                                        style="color: #ccc; background: rgba(255,255,255,0.1); padding: 4px 8px; border-radius: 0; font-size: 0.85rem;">
                                                        <%= book.genre %>
                                                    </span></td>
                                                <td>
                                                    <span
                                                        style="color: var(--neon-pink); font-size: 0.9rem; font-weight: 600;">
                                                        <i class="fas fa-swatchbook me-1"></i>
                                                        <%= book.format %>
                                                    </span>
                                                </td>
                                                <td class="price-tag">₹<%= book.price %>
                                                </td>
                                                <td class="small" style="color: #aaa;">
                                                    <%= book.date %>
                                                </td>
                                                <td class="text-center">
                                                    <div class="d-flex justify-content-center">
                                                        <a href="/edit-book/<%=book.id%>"
                                                            class="action-btn btn-edit-tech" title="Edit Book">
                                                            <i class="fas fa-pen"></i>
                                                        </a>
                                                        <button class="action-btn btn-del-tech"
                                                            onclick="handeleDelete('<%= book.id %>')"
                                                            title="Delete Book">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const handeleDelete = (deleteId) => {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                color: "#fff",
                background: "#15192b",
                showCancelButton: true,
                confirmButtonColor: "#bc13fe",
                cancelButtonColor: "#333",
                confirmButtonText: "Yes, Delete",
                cancelButtonText: "Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `delete-book/${deleteId}`
                }
            });
        }
        const url = new URL(window.location.href);
        const error = url.searchParams.get("error");

        if (error) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: error,
            }).then(() => {
                window.history.replaceState({}, document.title, "/");
            });
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>